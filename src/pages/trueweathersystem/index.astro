---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import ProjectPage from "../../components/ProjectPage.astro";


const projectData = {
  title: "True Weather System",
  description: "Simulazione realistica del ciclo giorno-notte e delle condizioni atmosferiche in Unreal Engine, con gestione di tempo reale o scalabile e calendario completo giorno/mese/anno. ",
  imageUrl: "/assets/travyplay-screenshot.jpg", 
   tags: ["UE5","C++"]
};
---


<BaseLayout title={projectData.title}>
  <Fragment slot="header">
  
    <Header title={projectData.title} />
  </Fragment>

  <ProjectPage {...projectData} />

  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>

